<div class="modal-dialog" role="document">
  <div class="modal-content rounded-0">
    <div class="modal-header">
      <h5 class="modal-title" id="personalInfoModalLabel">Edit Personal Information</h5>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <%= form_for @employee, url: :update_personal_info, method: :patch do |f| %>
    <div class="modal-body">
      <div class="row">
        <div class="col-12">
          <label>Name</label>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <%= f.text_field :first_name, class: "form-control rounded-0", placeholder: "First Name" %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <%= f.text_field :last_name, class: "form-control rounded-0", placeholder: "Last Name" %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <label>Email</label>
            <%= f.text_field :email, class: "form-control rounded-0" %>
          </div> 
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label>Marital Status</label>
            <%= f.select :marital_status, options_for_select(Employee::MARITAL_STATUS, selected: @employee.marital_status), { prompt: "Select Status" }, { class: "form-control rounded-0" } %>
          </div>  
        </div> 
      </div>


      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <label>Contact</label>
            <%= f.text_field :contact, class: "form-control rounded-0" %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label>Profile Photo</label><br>
            <%= f.file_field :profile_pic %>
          </div>
        </div>
      </div>

      <div class="row">
       <div class="col-md-6"> 
        <%= f.label :date_of_birth %>
        <div class="input-group mb-3">
          <%= f.text_field :date_of_birth, class: "form-control datepicker rounded-0","aria-describedby" => "basic-addon2" %>
          <div class="input-group-append">
            <span class="input-group-text" id="basic-addon2"><i class="fa fa-calendar"></i></span>
          </div>
        </div>
      </div>
        <div class="col-md-6">
          <div class="form-group">
            <label>Gender</label>
            <%= f.select :gender, options_for_select(User::GENDER, selected: @employee.gender), { prompt: "Select Gender" }, { class: "form-control rounded-0" } %>
          </div>
        </div>
      </div>

    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-secondary rounded-0" data-dismiss="modal">Close</button>
      <button type="submit" class="btn btn-primary rounded-0">Save changes</button>
    </div>
    <% end %>
  </div>
</div>
<script type="text/javascript">
  $(function () {
  $(".datepicker").datepicker({ 
        autoclose: true, 
        todayHighlight: true
  }).datepicker('update', new Date());
});

</script>


