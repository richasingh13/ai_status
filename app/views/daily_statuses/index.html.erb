<div class="container">
  <h3 class="text-center mb-4">Daily Statuses</h3>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>In time</th>
          <th>Out time</th>
          <th>Break</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @daily_statuses.each do |daily_status| %>
          <tr>
            <td><%= daily_status.in_time %></td>
            <td><%= daily_status.out_time %></td>
            <td><%= daily_status.break %></td>
            <td><%= link_to 'Show', daily_status %></td>
            <td><%= link_to 'Edit', edit_daily_status_path(daily_status) %></td>
            <td><%= link_to 'Destroy', daily_status, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
<%= link_to 'New Daily Status', new_daily_status_path, class: "btn btn-primary mb-5" %>
</div>

