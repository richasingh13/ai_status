<p id="notice"><%= notice %></p>
<div class="container">
  <h3 class="text-center mb-4">Documents</h3>
  <div class="table-responsive">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Document Name</th>
          <th>Document Type</th>
          <th>Attachments</th>
          <th colspan="3">Actions</th>
        </tr>
      </thead>

      <tbody>
        <% @documents.each do |document| %>
        <tr>
          <td><%= document.document_name %></td>
          <td><%= document.document_type %></td>
          <td><%= document.attachment_url %></td>
          <td><%= link_to 'Show', admin_document_path(document) %></td>
          <td><%= link_to 'Edit', edit_admin_document_path(document) %></td>
          <td><%= link_to 'Destroy', admin_document_path(document), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>  
  <div class="mt-5">
    <%= link_to 'New Document', new_admin_document_path, class: "btn btn-primary mb-5 rounded-0" %>
  </div>  
</div>
