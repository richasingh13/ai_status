<p id="notice"><%= notice %></p>
<div class="container">
  <div class="row">
    <div class="col-md-4">
      <h3 class="">Trainees</h3>
    </div>
    <div class="col-md-8">
        <%= link_to 'New Trainee', new_admin_trainee_path, class: "btn btn-primary mb-5 ml-3 rounded-0 float-right" %>
    </div>
  </div>
  <div class="col-12">
    <div class="card">
      <div class="card-body">
        <%= search_form_for @q, url: :admin_trainees do |f| %>
          <div class="form-group row">
            <div class="col-md-4">
              <%= f.label 'Name' %>
              <%= f.search_field :name_cont, class: "form-control" %>
            </div>
            <div class="col-md-4">
              <%= f.label 'Email' %>
              <%= f.search_field :email_cont, class: "form-control" %>
            </div>
            <div class="col-md-4">
              <%= f.label 'Contact number' %>
              <%= f.search_field :contact_number_cont, class: "form-control" %>
            </div>
          </div>
          <div class="form-group row">
            <div class="col-md-4">
              <%= f.label 'Gender' %>
              <%= f.search_field :gender_cont, class: "form-control" %>
            </div>
            <div class="col-md-4">
              <%= f.label 'Permanent Address' %>
              <%= f.search_field :permanent_address_cont, class: "form-control" %>
            </div>
            <div class="col-md-4">
              <%= f.label 'Local Address' %>
              <%= f.search_field :local_address_cont, class: "form-control" %>
            </div>
          </div>
          <div class="search-actions">
            <%= f.submit class: "btn btn-primary rounded-0" %>
            <%= link_to "Refresh", admin_trainees_path, class: "btn btn-secondary rounded-0" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-12 mt-4">
    <div class="table-responsive">
      <table class="table table-hover"> 
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Contact number</th>
            <th>Date of birth</th>
            <th>Local address</th>
            <th>Permanent address</th>
            <th>College</th>
            <th>Semester</th>
            <th>Year</th>
            <th>Profile photo</th>
            <th>Gender</th>
            <th>Joining date</th>
            <th colspan="3">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @trainees.each do |trainee| %>
          <tr>
            <td><%= trainee.name %></td>
            <td><%= trainee.email %></td>
            <td><%= trainee.contact_number %></td>
            <td><%= trainee.date_of_birth %></td>
            <td><%= trainee.local_address %></td>
            <td><%= trainee.permanent_address %></td>
            <td><%= trainee.college %></td>
            <td><%= trainee.semester %></td>
            <td><%= trainee.year %></td>
            <td><%= trainee.profile_photo %></td>
            <td><%= trainee.gender %></td>
            <td><%= trainee.joining_date %></td>
            <td><%= link_to 'Show', admin_trainee_path(trainee) %></td>
            <td><%= link_to 'Edit', edit_admin_trainee_path(trainee) %></td>
            <td><%= link_to 'Destroy',  admin_trainee_path(trainee), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
     <%= paginate @trainees %>  
  </div>
</div>

