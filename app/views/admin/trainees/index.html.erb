<p id="notice"><%= notice %></p>

<div class="col-12">
  <div class="table-responsive">
    <table class="table table-hover"> 
        <h1 class="ml-2">Trainees</h1>
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Contact number</th>
            <th>Date of birth</th>
            <th>Local address</th>
            <th>Permanent address</th>
            <th>College</th>
            <th>Semester</th>
            <th>Year</th>
            <th>Profile photo</th>
            <th>Gender</th>
            <th>Joining date</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @trainees.each do |trainee| %>
            <tr>
              <td><%= trainee.name %></td>
              <td><%= trainee.email %></td>
              <td><%= trainee.contact_number %></td>
              <td><%= trainee.date_of_birth %></td>
              <td><%= trainee.local_address %></td>
              <td><%= trainee.permanent_address %></td>
              <td><%= trainee.college %></td>
              <td><%= trainee.semester %></td>
              <td><%= trainee.year %></td>
              <td><%= trainee.profile_photo %></td>
              <td><%= trainee.gender %></td>
              <td><%= trainee.joining_date %></td>
              <td><%= link_to 'Show', admin_trainee_path(trainee) %></td>
              <td><%= link_to 'Edit', edit_admin_trainee_path(trainee) %></td>
              <td><%= link_to 'Destroy',  admin_trainee_path(trainee), method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
    </table>
  </div>
</div>


      <br>

      <%= link_to 'New Trainee', new_admin_trainee_path, class: "btn btn-primary mt-5" %>
