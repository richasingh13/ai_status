<%= form_for [:admin, user] do |f| %>
  <% if user.errors.present? %>
    <% user.errors.full_messages.each do |message| %>
      <p><%= message %></p>
    <% end %>
  <% end %>
  <div class="card shadow rounded-0 mt-4 mb-3">
    <div class="card-body">
      <h5 class="text-muted">Personal Information</h5>
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <%= f.label :first_name %>
            <%= f.text_field :first_name, class: "form-control rounded-0" %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <%= f.label :last_name %>
            <%= f.text_field :last_name, class: "form-control rounded-0" %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <%= f.label :contact %>
            <%= f.text_field :contact, class: "form-control rounded-0" %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <%= f.label :profile_pic %>
            <%= f.file_field :profile_pic %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <%= f.label :date_of_birth %>
            <%= f.date_field :date_of_birth, class: "form-control rounded-0" %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <%= f.label :gender %>
            <%= f.select :gender, options_for_select(User::GENDER, selected: @user.gender), { prompt: "Select Gender" }, { class: "form-control rounded-0" } %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <%= f.label :marital_status %>
            <%= f.select :marital_status, options_for_select(User::MARITAL_STATUS, selected: @user.marital_status), { prompt: "Select Status" }, { class: "form-control rounded-0" } %>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <div class="card shadow rounded-0 mt-5 mb-3">
    <div class="card-body">
      <h5 class="text-muted">Account Information</h5>
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <%= f.label :Email %>
            <%= f.text_field :email, class: "form-control rounded-0" %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <%= f.label :Password %>
            <%= f.password_field :password, class: "form-control rounded-0" %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <%= f.label 'Password Confirmation' %>
            <%= f.password_field :password_confirmation, class: "form-control rounded-0" %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="card shadow rounded-0 mt-5 mb-3">
    <div class="card-body">
      <h5 class="text-muted">Address Information</h5>
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <%= f.label :permanent_address %>
            <%= f.text_field :permanent_address, class: "form-control rounded-0" %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <%= f.label :current_address %>
            <%= f.text_field :current_address, class: "form-control rounded-0"  %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <%= f.label :city %>
            <%= f.text_field :city, class: "form-control rounded-0" %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <%= f.label :state %>
            <%= f.text_field :state, class: "form-control rounded-0"  %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <%= f.label :country %>
            <%= f.country_select  :country, {}, {class: "form-control rounded-0"} %> 
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <%= f.label :nationality %>
            <%= f.country_select  :nationality, {}, {class: "form-control rounded-0"} %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="card shadow rounded-0 mt-5 mb-3">
    <div class="card-body">
      <h5 class="text-muted">Employeement Information</h5>
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <%= f.label :designation %>
            <%= f.text_field :designation, class: "form-control rounded-0" %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <%= f.label :date_of_joining %>
            <%= f.date_field :date_of_joining, class: "form-control rounded-0" %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <%= f.label :role %>
            <%= f.select :role, options_for_select(User::ROLE, selected: @user.role), { prompt: "Select Role" }, { class: "form-control rounded-0" } %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <%= f.label :skype_username %>
            <%= f.text_field :skype_username, class: "form-control rounded-0" %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <%= f.label :linkedin_profile_url %>
            <%= f.text_field :linkedin_profile_url, class: "form-control rounded-0" %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <%= f.label :github_username %>
            <%= f.text_field :github_username, class: "form-control rounded-0" %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <%= f.label :aadhar_uid %>
            <%= f.text_field :aadhar_uid, class: "form-control rounded-0" %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <%= f.label :pan_uid %>
            <%= f.text_field :pan_uid, class: "form-control rounded-0" %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <div class="form-group">
            <%= f.label :job_description %>
            <%= f.text_area :job_description, class: "form-control rounded-0", rows: "7" %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-12 mt-5 mb-5">
      <%= f.submit class: "btn btn-primary rounded-0 shadow" %>
    </div>
  </div>
<% end %>
