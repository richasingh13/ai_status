<p id="notice"><%= notice %></p>
<div class="container">
  <h3 class="text-center mb-4">Users</h3>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Contact</th>
          <th>Profile Pic</th>
          <th>Designation</th>
          <th>Date of Joining</th>
          <th>Date of Birth</th>
          <th>Job Description</th>
          <th>Permanent Address</th>
          <th>Current Address</th>
          <th>City</th>
          <th>State</th>
          <th>Country</th>
          <th>Nationality</th>
          <th>Gender</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.first_name %></td>
            <td><%= user.last_name %></td>
            <td><%= user.contact %></td>
            <td><%= user.profile_pic %></td>
            <td><%= user.designation %></td>
            <td><%= user.date_of_joining %></td>
            <td><%= user.date_of_birth %></td>
            <td><%= user.job_description %></td>
            <td><%= user.permanent_address %></td>
            <td><%= user.current_address %></td>
            <td><%= user.city %></td>
            <td><%= user.state %></td>
            <td><%= user.country %></td>
            <td><%= user.nationality %></td>
            <td><%= user.gender %></td>
            <td><%= link_to 'Show', @user %></td>
            <td><%= link_to 'Edit', edit_admin_user_path(user) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>

