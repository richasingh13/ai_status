<p id="notice"><%= notice %></p>
<div class="container">
  <h3 class="text-center mb-4">Reference People</h3>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Contact</th>
        <th>Email</th>
        <th>Currently worked at</th>
        <th>Address</th>
        <th>How connected</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @reference_people.each do |reference_person| %>
      <tr>
        <td><%= reference_person.name %></td>
        <td><%= reference_person.contact %></td>
        <td><%= reference_person.email %></td>
        <td><%= reference_person.currently_worked_at %></td>
        <td><%= reference_person.address %></td>
        <td><%= reference_person.how_connected %></td>
        <td><%= link_to 'Show', admin_reference_person_path(reference_person) %></td>
        <td><%= link_to 'Edit', edit_admin_reference_person_path(reference_person) %></td>
        <td><%= link_to 'Destroy', admin_reference_person_path(reference_person), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= link_to 'New Reference Person', new_admin_reference_person_path, class: "btn btn-primary mb-5 ml-5 rounded-0" %>



