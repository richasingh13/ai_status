<div class="container">
  <div class="row">
    <div class="col-md-10 offset-1">
      <%= form_for [:admin, relative] do |form| %>
        <% if relative.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(relative.errors.count, "error") %> prohibited this relative from being saved:</h2>

            <ul>
              <% relative.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div class="card shadow rounded-0">
          <div class="card-body">
            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <%= form.label :name %>
                  <%= form.text_field :name, class: "form-control rounded-0" %>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <%= form.label :relation %>
                  <%= form.text_field :relation, class: "form-control rounded-0" %>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <%= form.label :contact_number %>
                  <%= form.text_field :contact_number, class: "form-control rounded-0" %>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <%= form.label :address %>
                  <%= form.text_field :address, class: "form-control rounded-0" %>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <div class="actions mt-3">
                    <%= form.submit class: "btn btn-primary rounded-0" %>
                  </div>  
                </div>
              </div>
            </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>




