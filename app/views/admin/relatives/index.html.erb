<p id="notice"><%= notice %></p>
<div class="container">
  <h3 class="text-center mb-4">Relatives</h3>
  <div class="table-responsive">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Relation</th>
          <th>Contact number</th>
          <th>Address</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @relatives.each do |relative| %>
          <tr>
            <td><%= relative.name %></td>
            <td><%= relative.relation %></td>
            <td><%= relative.contact_number %></td>
            <td><%= relative.address %></td>
            <td><%#= relative..#name %></td>
            <td><%= link_to 'Show', admin_relative_path(relative) %></td>
            <td><%= link_to 'Edit', edit_admin_relative_path(relative) %></td>
            <td><%= link_to 'Destroy', admin_relative_path(relative), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="mt-5">  
    <%= link_to 'New Relative', new_admin_relative_path, class: "btn btn-primary mb-5 rounded-0" %>
  </div>
</div>



