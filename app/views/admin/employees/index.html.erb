<p id="notice"><%= notice %></p>
<div class="container">
  <h3 class="text-center mb-4">Employees</h3>
  <table class="table table-hover"> 
   <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Contact</th>
      <th>Profile pic</th>
      <th>Date of birth</th>
      <th>Gender</th>
      <th>Marital status</th>
      <th>Email</th>
      <th>Permanent address</th>
      <th>Current address</th>
      <th>City</th>
      <th>State</th>
      <th>Country</th>
      <th>Nationality</th>
      <th>Designation</th>
      <th>Date of joining</th>
      <th>Role</th>
      <th>Skype username</th>
      <th>Linkedin profile url</th>
      <th>Github username</th>
      <th>Aadhar uid</th>
      <th>Pan uid</th>
      <th>Job description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.first_name %></td>
        <td><%= employee.last_name %></td>
        <td><%= employee.contact %></td>
        <td><%= employee.profile_pic %></td>
        <td><%= employee.date_of_birth %></td>
        <td><%= employee.gender %></td>
        <td><%= employee.marital_status %></td>
        <td><%= employee.email %></td>
        <td><%= employee.permanent_address %></td>
        <td><%= employee.current_address %></td>
        <td><%= employee.city %></td>
        <td><%= employee.state %></td>
        <td><%= employee.country %></td>
        <td><%= employee.nationality %></td>
        <td><%= employee.designation %></td>
        <td><%= employee.date_of_joining %></td>
        <td><%= employee.skype_username %></td>
        <td><%= employee.linkedin_profile_url %></td>
        <td><%= employee.github_username %></td>
        <td><%= employee.aadhar_uid %></td>
        <td><%= employee.pan_uid %></td>
        <td><%= employee.job_description %></td>
        <td><%= link_to 'Show', admin_employee_path(employee) %></td>
        <td><%= link_to 'Edit', edit_admin_employee_path(employee) %></td>
        <td><%= link_to 'Destroy', admin_employee_path(employee), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Employee', new_admin_employee_path, class: "btn btn-primary mb-5 ml-3 rounded-0" %>
</div>

