<p id="notice"><%= notice %></p>
<div class="container">
  <h3 class="text-center mb-4">Employees</h3>
  <div class="table-responsive">
    <table class="table table-hover"> 
      <thead>
        <tr>
          <th>Profile pic</th>
          <th>Name</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @employees.each do |employee| %>
          <tr>
            <td><%= image_tag "user-dummy.png", width: "40", class: "rounded-circle" %></td>
            <td><%= employee.name %></td>
            <td><%= link_to 'Show', admin_employee_path(employee) %></td>
            <td><%= link_to 'Edit', edit_admin_employee_path(employee) %></td>
            <td><%= link_to 'Destroy', admin_employee_path(employee), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div> 
  <div class="mt-5">
    <%= link_to 'New Employee', new_admin_employee_path, class: "btn btn-primary mb-5 ml-3 rounded-0" %>
  </div>  
</div>

